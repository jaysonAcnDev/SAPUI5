<mvc:View controllerName="testproject.testproject.controller.Homepage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
            <Button id="btn1" text="{i18n>showButtonText}" press=".onPressBtn1"/>
            <Input
            id="myInput"
            value="{/recipient/name}"
            description="Your input: {/recipient/name}"
            valueLiveUpdate="true"
            width="60%"/>
        <content />
    </Page>
</mvc:View>
