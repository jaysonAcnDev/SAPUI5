<mvc:View controllerName="testproject.testproject.controller.Homepage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                    <Panel
                        headerText="{i18n>helloPanelTitle}">
                        <content>
                            <Button
                                text="{i18n>showButtonText}" 
                                press=".onPressBtn1"/>
                            <Input
                                value="{/recipient/name}"
                                description="Hello {/recipient/name}"
                                valueLiveUpdate="true"
                                width="60%"/>
                        </content>
                    </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
